from PIL import Image, ImageEnhance

# 讀取上傳的圖片
image_path = "/mnt/data/未命名.jpg"
image = Image.open(image_path)

# 降低飽和度
saturation_enhancer = ImageEnhance.Color(image)
image_lower_saturation = saturation_enhancer.enhance(0.6)  # 0.6 表示降低飽和度

# 提高明亮度
brightness_enhancer = ImageEnhance.Brightness(image_lower_saturation)
image_brighter = brightness_enhancer.enhance(1.2)  # 1.2 表示提高亮度

# 儲存調整後的圖片
adjusted_image_path = "/mnt/data/adjusted_image.jpg"
image_brighter.save(adjusted_image_path)

# 顯示調整後的圖片
image_brighter.show()

# 提供下載鏈接
adjusted_image_path
