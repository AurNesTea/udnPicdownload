<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <title>會員系統範例</title>
  <style>
    /* 基本 reset 與 layout */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: "Microsoft JhengHei", sans-serif; background: #f5f5f5; color: #333; }
    .navbar {
      background: #ffffff;
      border-bottom: 1px solid #ddd;
      padding: 10px 20px;
    }
    .navbar .logo {
      font-size: 24px;
      font-weight: bold;
      color: #2a6f42;
    }
    .container {
      width: 100%;
      max-width: 400px;
      margin: 50px auto;
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .form-group {
      margin-bottom: 20px;
    }
    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-size: 14px;
    }
    .form-group input {
      width: 100%;
      padding: 10px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .btn {
      display: inline-block;
      width: 100%;
      padding: 12px;
      background: #2a6f42;
      color: #fff;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .btn:disabled {
      background: #aaa;
    }
    .link {
      display: block;
      margin-top: 10px;
      font-size: 14px;
      text-align: center;
      color: #2a6f42;
      text-decoration: none;
    }
    .error {
      color: red;
      font-size: 13px;
      margin-top: 5px;
    }
    .hidden {
      display: none;
    }
  </style>
</head>
<body>

  <div class="navbar">
    <span class="logo">健康永續ESG</span>
  </div>

  <div id="page-login" class="container">
    <h2>會員登入</h2>
    <div class="form-group">
      <label for="login-email">電子郵件</label>
      <input type="email" id="login-email" required>
      <div id="login-email-error" class="error hidden">請輸入有效的電子郵件</div>
    </div>
    <div class="form-group">
      <label for="login-password">密碼</label>
      <input type="password" id="login-password" required>
      <div id="login-password-error" class="error hidden">請輸入密碼</div>
    </div>
    <button id="login-btn" class="btn">登入</button>
    <a href="#" id="to-register" class="link">還沒有帳號？註冊</a>
    <a href="#" id="to-forgot" class="link">忘記密碼</a>
    <div id="login-general-error" class="error hidden"></div>
  </div>

  <div id="page-register" class="container hidden">
    <h2>註冊帳號</h2>
    <div class="form-group">
      <label for="reg-email">電子郵件</label>
      <input type="email" id="reg-email" required>
      <div id="reg-email-error" class="error hidden">請輸入有效電子郵件</div>
    </div>
    <div class="form-group">
      <label for="reg-password">密碼（至少 8 碼，包含字母與數字）</label>
      <input type="password" id="reg-password" required>
      <div id="reg-password-error" class="error hidden">密碼格式錯誤</div>
    </div>
    <div class="form-group">
      <label for="reg-password-confirm">確認密碼</label>
      <input type="password" id="reg-password-confirm" required>
      <div id="reg-password-confirm-error" class="error hidden">兩次密碼不一致</div>
    </div>
    <button id="register-btn" class="btn">註冊</button>
    <a href="#" id="to-login-from-reg" class="link">已有帳號？登入</a>
    <div id="reg-general-error" class="error hidden"></div>
  </div>

  <div id="page-forgot" class="container hidden">
    <h2>忘記密碼</h2>
    <div class="form-group">
      <label for="forgot-email">請輸入註冊時的電子郵件</label>
      <input type="email" id="forgot-email" required>
      <div id="forgot-email-error" class="error hidden">請輸入有效電子郵件</div>
    </div>
    <button id="forgot-btn" class="btn">送出重設密碼連結</button>
    <a href="#" id="to-login-from-forgot" class="link">回到登入</a>
    <div id="forgot-general-error" class="error hidden"></div>
  </div>

  <div id="page-profile" class="container hidden">
    <h2>會員中心</h2>
    <div class="form-group">
      <label for="profile-name">姓名 / 暱稱</label>
      <input type="text" id="profile-name">
    </div>
    <div class="form-group">
      <label for="profile-email">電子郵件</label>
      <input type="email" id="profile-email" disabled>
    </div>
    <button id="profile-save-btn" class="btn">儲存變更</button>
    <button id="logout-btn" class="btn" style="margin-top:10px; background:#888;">登出</button>
    <div id="profile-general-error" class="error hidden"></div>
    <div id="profile-general-msg" class="hidden" style="color:green; font-size:14px; margin-top:10px;">資料已更新。</div>
  </div>

  <script>
    // 簡易 front-end 控制頁面切換與驗證 mockup

    function showPage(pageId) {
      const pages = ['page-login','page-register','page-forgot','page-profile'];
      pages.forEach(id => {
        document.getElementById(id).classList.add('hidden');
      });
      document.getElementById(pageId).classList.remove('hidden');
    }

    document.getElementById('to-register').addEventListener('click', e => {
      e.preventDefault();
      showPage('page-register');
    });
    document.getElementById('to-login-from-reg').addEventListener('click', e => {
      e.preventDefault();
      showPage('page-login');
    });
    document.getElementById('to-forgot').addEventListener('click', e => {
      e.preventDefault();
      showPage('page-forgot');
    });
    document.getElementById('to-login-from-forgot').addEventListener('click', e => {
      e.preventDefault();
      showPage('page-login');
    });

    // 模擬登入成功後進入會員中心
    document.getElementById('login-btn').addEventListener('click', () => {
      const email = document.getElementById('login-email').value.trim();
      const password = document.getElementById('login-password').value;
      let valid = true;
      if (!email) {
        document.getElementById('login-email-error').classList.remove('hidden');
        valid = false;
      } else {
        document.getElementById('login-email-error').classList.add('hidden');
      }
      if (!password) {
        document.getElementById('login-password-error').classList.remove('hidden');
        valid = false;
      } else {
        document.getElementById('login-password-error').classList.add('hidden');
      }

      if (!valid) return;

      // mock 驗證
      if (email === "test@example.com" && password === "Password123") {
        showPage('page-profile');
      } else {
        const errEl = document.getElementById('login-general-error');
        errEl.textContent = "帳號或密碼錯誤";
        errEl.classList.remove('hidden');
      }
    });

    // 註冊按鈕驗證
    document.getElementById('register-btn').addEventListener('click', () => {
      const email = document.getElementById('reg-email').value.trim();
      const pw = document.getElementById('reg-password').value;
      const pwc = document.getElementById('reg-password-confirm').value;
      let valid = true;

      // email 檢查
      if (!email || !/^[\\w\\.-]+@[\\w\\.-]+\\.\\w+$/.test(email)) {
        document.getElementById('reg-email-error').classList.remove('hidden');
        valid = false;
      } else {
        document.getElementById('reg-email-error').classList.add('hidden');
      }

      // 密碼強度
      if (!pw || pw.length < 8 || !/[A-Za-z]/.test(pw) || !/[0-9]/.test(pw)) {
        document.getElementById('reg-password-error').classList.remove('hidden');
        valid = false;
      } else {
        document.getElementById('reg-password-error').classList.add('hidden');
      }

      // 密碼確認比對
      if (pw !== pwc) {
        document.getElementById('reg-password-confirm-error').classList.remove('hidden');
        valid = false;
      } else {
        document.getElementById('reg-password-confirm-error').classList.add('hidden');
      }

      if (!valid) return;

      // mock 成功註冊行為
      alert("註冊成功，請登入");
      showPage('page-login');
    });

    // 忘記密碼 mock
    document.getElementById('forgot-btn').addEventListener('click', () => {
      const email = document.getElementById('forgot-email').value.trim();
      if (!email || !/^[\\w\\.-]+@[\\w\\.-]+\\.\\w+$/.test(email)) {
        document.getElementById('forgot-email-error').classList.remove('hidden');
        return;
      } else {
        document.getElementById('forgot-email-error').classList.add('hidden');
      }
      alert("重設密碼連結已送出，請檢查信箱");
      showPage('page-login');
    });

    // 會員中心儲存
    document.getElementById('profile-save-btn').addEventListener('click', () => {
      const name = document.getElementById('profile-name').value.trim();
      if (!name) {
        document.getElementById('profile-general-error').textContent = "請輸入姓名或暱稱";
        document.getElementById('profile-general-error').classList.remove('hidden');
        return;
      } else {
        document.getElementById('profile-general-error').classList.add('hidden');
      }
      document.getElementById('profile-general-msg').classList.remove('hidden');
      // 模擬儲存後訊息
      setTimeout(() => {
        document.getElementById('profile-general-msg').classList.add('hidden');
      }, 2000);
    });

    // 登出
    document.getElementById('logout-btn').addEventListener('click', () => {
      showPage('page-login');
    });
  </script>

</body>
</html>
